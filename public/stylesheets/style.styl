header-color = #d00
page-background-color = #eee
tag-color = #ffe

body
  padding: 50px
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: page-background-color
  line-height: 150%
  width: 900px
  margin: auto

.content
    width: 700px
    float: left

.sidebar
    width: 180px
    float: right
    padding-left: 20px

    aside
        h1
            font-size: 16px
ul.tags
    margin: 0
    padding: 0
    font-size: 12px
    li
        display: inline
        padding: 4px
        margin: 4px
        background-color: tag-color
        list-style-type: none
        a
            text-decoration: none

.post
    background-color: white
    padding: 20px
    border-radius: 10px
    margin-bottom: 20px

    max-width: 700px

    header
        h1
            color: header-color
            margin: 0
            margin-bottom: 5px
            padding: 0
        a
            color: header-color
            text-decoration: none
        margin-bottom: 15px

    footer
        font-size: 12px
        span.label
            font-variant: small-caps
        ul.tags
            display: inline

    time
        font-variant: small-caps
        font-size: 12px
        color: darken(header-color, 20%)