header-color = #368
page-background-color = #aab
tag-color = #ffe

body
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: page-background-color
  line-height: 150%

@media screen and (min-width: 1000px)
    body
      width: 900px
      margin: auto
      padding: 50px

    .content
        width: 700px
        float: left

    .sidebar
        width: 180px
        float: right
        padding-left: 20px

        aside
            h1
                font-size: 16px

ul.tags
    margin: 0
    padding: 0
    font-size: 12px
    li
        display: inline
        padding: 4px
        margin: 4px
        background-color: tag-color
        list-style-type: none
        a
            text-decoration: none

.post
    background-color: #ddd
    padding: 20px
    border-radius: 10px
    margin-bottom: 20px

    header
        h1
            color: header-color
            margin: 0
            margin-bottom: 5px
            padding: 0
        a
            color: header-color
            text-decoration: none
        margin-bottom: 15px

    footer
        font-size: 12px
        span.label
            font-variant: small-caps
        ul.tags
            display: inline

    time
        font-variant: small-caps
        font-size: 12px
        color: darken(header-color, 20%)