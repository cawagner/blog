header-color = #d00

body
  padding: 50px
  font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
  background-color: #eee
  line-height: 150%

.post
    background-color: white
    padding: 20px
    border-radius: 10px

    max-width: 700px

    header
        h1
            color: header-color
            margin: 0
            padding: 0
        a
            color: header-color
            text-decoration: none
        margin-bottom: 15px

    time
        font-variant: small-caps
        font-size: 12px
        color: darken(header-color, 20%)