header-color = rgb(60, 150, 250)
link-color = rgb(40, 80, 160)
page-background-color = rgb(15, 30, 80)
tag-color = #ffe
icon-spacing = 6px
small-font-size = 12px

no-margin-padding()
    padding: 0
    margin: 0

dark-bg()
    color: #eee
    a:link
        color: white
    a:hover
        color: lighten(desaturate(link-color, 40%), 60%)
    a:visited
        color: silver

label()
    font-size: small-font-size
    color: darken(header-color, 20%)

body
    font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
    background: page-background-color url('../images/irongrip.png')

body>header
    h1
        a
            color: rgb(80, 180, 240)
            text-decoration: none

body>.content
    a
        color: link-color
    a:visited
        color: darken(saturate(link-color, 30%), 30%)
    a:hover
        color: lighten(saturate(link-color, 30%), 30%)
body>.content>h2
    color: rgb(60, 200, 250)

body>footer
    clear: both
    text-align: center
    font-size: small-font-size
    color: #ddd
    p
        no-margin-padding()
        dark-bg()

.sidebar aside
    padding-bottom: 0.5em
    h1
        font-size: 16px
        color: rgb(60, 200, 250)
        span.icon
            color: rgb(60, 150, 250)
    p
        dark-bg()
        font-size: small-font-size
    span.icon
        padding-right: icon-spacing
        font-size: 16px
    ul
        dark-bg()
        margin: 0
        font-size: 13px
    ul:not(.tags)
        padding-left: 30px
    .social
        padding-left: icon-spacing
        a
            text-decoration: none

@media screen and (max-width: 800px)
    header
        width: 90%
    .post
        width: 90%
    .sidebar
        background-color: #222733
        padding: 0.5em
        margin: 0.5em
    .comments
        display: none


@media screen and (min-width: 800px)
    body
      width: 900px
      margin: 0 auto
      padding: 0

    .content
        width: 700px
        float: left

    .sidebar
        width: 180px
        float: right


ul.tags
    no-margin-padding()
    font-size: small-font-size
    display: inline
    li
        display: inline
        padding: 4px
        margin: 4px
        list-style-type: none
        margin-right: icon-spacing

.post
    background-color: #ddd
    margin: 1em auto
    padding: 1.5em
    border-radius: 10px
    border-left: 4px solid rgb(40, 120, 220)

    line-height: 150%

    img
        max-width: 100%

    header
        h1
            no-margin-padding()
            margin-bottom: 0.5em
        a:link,a:visited
            color: header-color
            text-decoration: none
        margin-bottom: 1em

    footer
        font-size: small-font-size

    .icon-calendar
        font-size: small-font-size
        margin-right: icon-spacing
    time
        label()

.comments
    background-color: #ccc
    padding: 20px

.pagination
    dark-bg()

    ul
        display: inline
        list-style-type: none
        margin: 0
        padding-left: icon-spacing
    li
        dark-bg()
        display: inline
    li a
        display: inline-block
        font-size: 16px
        border-radius: 50%
        background-color: #333
        padding: icon-spacing
    li.active a
        background-color: #555
        text-decoration: none