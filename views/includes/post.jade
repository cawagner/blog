article.post.full(itemscope,itemtype="http://schema.org/BlogPosting")
    header
      h1
        a(href=post.url,itemprop="name headline url")
          = post.title
      span.icon-calendar
      time(itemprop="datePublished",datetime=moment(post.date).format())
        = moment(post.date).format('MMMM Do, YYYY')
    div(itemprop="articleBody")
      != post.content
    footer
      span.icon-tags
      ul.tags(itemprop="keywords")
        - each tag in post.tags
          li
            a(rel='tag',href=tagUrl(tag)) #{tag}
