article.post.full
    header
      h1
        a(href=post.url)
          = post.title
      span.icon-calendar
      time(pubdate,datetime=moment(post.date).format())
        = moment(post.date).format('MMMM Do YYYY')
    != post.content
    footer
      span.icon-tags
      ul.tags
        - each tag in post.tags
          li
            a(rel='tag',href=tagUrl(tag)) #{tag}
