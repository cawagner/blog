doctype xml
rss(version='2.0', xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title Chris Wagner's Blog
    link http://chriswagnerblog.com
    description Posts from Chris Wagner's blog
    atom:link(href='http://chriswagnerblog.com/rss', rel='self', type='application/rss+xml')
    each post in posts
      - var fullUrl = 'http://chriswagnerblog.com' + post.url
      item
        title= post.title
        link= fullUrl
        description
          | <![CDATA[
          | !{post.preview}
          | ]]>
        pubDate= post.date.toUTCString()
        guid= fullUrl