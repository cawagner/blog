extends layout

block content
  article.post.full
    header
      h1
        a(href=post.url)
          = post.title
      time(pubdate,datetime=moment(post.date).format())
        = moment(post.date).format('MMMM Do YYYY')
    != post.content
    footer
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-info #{tag}
