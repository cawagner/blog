      aside
        h1
          span.fa.fa-tags
          | Tags
        ul.tags
          - each tag in getTags()
            li
              a(href=tagUrl(tag)) #{tag}
      aside
        h1
          span.fa.fa-beer
          | Social Media
        ul.social-media-links
          li
            a(href="http://www.twitter.com/chris_a_wagner")
              span.fa.fa-twitter-square
              span @chris_a_wagner
          li
            a(href="http://www.github.com/cawagner")
              span.fa.fa-github-square
              span cawagner
      aside
        h1
          span.fa.fa-user
          | Blogroll
        ul.blogroll-links
          li
            a(href="http://ardalis.com/") Steve Smith
          li
